<h1>Welcome!</h1>

<% if current_user %>
   <div> Hey <%= current_user.name %></div>
   <div><%= image_tag(current_user.image) %></div>
   <div> Welcome!</div>

<% end %>

<% unless current_user %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>
